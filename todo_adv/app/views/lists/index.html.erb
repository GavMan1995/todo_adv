<h1>Lists Menu</h1>
<br/>

<%= link_to 'New List', new_list_path %>

<br/>

<% if @lists.any?  %>
  <% @lists.each do |list| %>
  <h2><%= list.name %></h2>
  <%= link_to image_tag("todo.jpg"), list_path(list)  %>
  <br/>
  <%= link_to 'Edit List Name', edit_list_path(list) %>
  <%= link_to 'Delete List', list_path(list), method: :delete %>
<% end %>
<% else %>
  <h3>There are no lists, please make one</h3>
<% end %>
